---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import "@fontsource/inter"
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="">
		<div class="container">
			<Header />
			<slot />
			<Footer />
		</div>
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
		--breakpoint-sm: max-width: 640px;
		--breakpoint-md: max-width: 768px;
		--breakpoint-lg: max-width: 1024px;
		--breakpoint-xl: max-width: 1280px;
		--breakpoint-2xl :max-width: 1536px;
	}
	html {
		/* These could be variables */
		font-family: "Inter", system-ui, sans-serif;
		background: linear-gradient(97.9deg, #FF2D82 -7%, #FF2D82 48.01%, #35D1E6 69.34%);
	}

	@media (
	: dark) {
		background-color: black;
		color: white
	}

	@media (prefers-color-scheme: light) {
		/* Light theme styles go here */
		background-color: white;
		color: black
	}	
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	body {
		background: white;
		border-radius: 25px;
		margin: 1rem;
		padding: 1rem 2rem;
	}
	.container {
		max-width: 1280px;
		min-height: calc(100vh - 4rem);
		margin: auto;
		background-color: white;
	}
</style>
